<div id="browse" class="pop_up">
	<div class="popupHeader"><span>＞　搜尋結果</span><span class="rfloat" id="close">×</span></div>
	<div class="popupMain">
		<span class="rfloat"><%= link_to '回上頁', '/search.html' %></span>
		<ul class="list">
			<% @cloth = @result %>
			<% if @cloth.empty? %>
			<div class="if_empty">【找不到相符的資料】</div>
			<% else %>
			<% @cloth.each do |clo| %>
				<li class="hanger">
		    		<div class="<%=clo['signal']%>">●</div>
		    		<div class="clothPic"><img src="/uploads/<%= clo['image'] %>" />
		    		<div class="plain_text"><%= clo['description'] %></div>
				</li>
			<% end %>
			<% end %>
		</ul>
	</div>

</div>
<script>
	$(function() {
		$( "#browse" ).slider();
	});
</script>
